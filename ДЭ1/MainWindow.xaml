<Window x:Class="ДЭ1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ДЭ1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <DockPanel>
            <StackPanel Margin="0,0,0,50" VerticalAlignment="Center" Orientation="Vertical">
                <Label Content="Логин" Margin="100,0"/>
                <TextBox x:Name="login" Margin="100,0"/>
                <Label Content="Пароль" Margin="100,0"/>
                <PasswordBox x:Name="password" Margin="100,0"/>
                <Button x:Name="loginBtr" 
                        Content="Авторизоваться" 
                        Click="LoginBtr_Click"
                        Margin="100,20"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
